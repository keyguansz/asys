<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:orientation="vertical"
       >

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="Njame"
            android:inputType="textPersonName"
            />
    <TextView
        android:id="@+id/test_leak"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="test_leak"/>

    <TextView
        android:id="@+id/test_anr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:text="test_anr ，sleep 15"/>
    <TextView
        android:id="@+id/test_anr_time"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:text="test_anr_time ，while(1)"/>
    <TextView
        android:id="@+id/test_lock"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:text="test_lock"/>
    </LinearLayout>

